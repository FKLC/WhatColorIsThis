{
  "manifest_version": 3,
  "name": "What color is this?",
  "description": "Easily learn the name of the color you click on. Useful for colorblinds.",
  "version": "0.0.0.1",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
   "icons": {
    "128": "icons/128.png"
  },
  "permissions": ["scripting", "activeTab", "contextMenus", "storage"]
}